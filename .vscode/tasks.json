{
    "tasks": [
        {
            "label": "C/C++: g++ build active file (Linux)",
            "type": "cppbuild",
            "command": "time",
            "args": [
                "g++",
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-include",
                "bits/stdc++.h",
                "-o",
                "${workspaceFolder}/bin/${fileBasenameNoExtension}"
            ],
            
            
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
              },
              
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["delete_bin"],
            "detail": "Task generated by Debugger."
        },
        {
            "label": "delete_bin",
            "type": "shell",
            "command": "rm -f ${workspaceFolder}/bin/${fileBasenameNoExtension}",
            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
              },
        }
    ],

    "version": "2.0.0"
}